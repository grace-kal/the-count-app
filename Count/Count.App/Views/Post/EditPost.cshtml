@model Count.Models.Post
@{
    ViewData["Title"] = "EditPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Post</h1>
@if (Model.Author.UserName != User.Identity.Name)
{
    @ViewData["NotTheAuthor"];
}
else
{
<form enctype="multipart/form-data" asp-area="" asp-controller="Post" asp-action="EditPost" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    @Html.HiddenFor(p => p.Id)
    <div class="form-group">
        <label asp-for="Title"></label>
        <br />
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <br />
        <textarea asp-for="Content" class="form-control" style="height:200px;"> </textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button class="btn btn-success"><i class="fas fa-user-edit"></i> Edit</button>
    <br />
    <a asp-area="" asp-controller="Post" asp-action="Feed">Back To Feed </a>
</form>
}
