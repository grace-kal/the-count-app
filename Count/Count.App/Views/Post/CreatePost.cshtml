@model Count.App.Models.PostBindingModel
@{
    ViewData["Title"] = "CreatePost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Post</h1>
<form asp-area="" asp-controller="Post" asp-action="CreatePost" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <br />
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <br />
        <textarea asp-for="Content" class="form-control" style="height:200px;"> </textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button class="btn btn-success"><i class="fas fa-user-edit"></i> Post</button>
    <br />
    <a asp-area="" asp-controller="Post" asp-action="Feed">Back To Feed </a>
</form>
