@model Count.Models.Day
@{
    ViewData["Title"] = "CreateDay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Day</h1>

<form asp-controller="Day" asp-action="CreateDay" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    @Html.HiddenFor(d => d.UserId)

    <div class="form-group">
        <label>Date:</label>
        <br />
        <input asp-for="Date" class="form-control" readonly />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button class="btn btn-success"><i class="fas fa-book"></i> Add</button>
    <br />
    <a asp-controller="Day" asp-action="AllUserDays"><i>Back To Diary</i></a>
</form>


