@using Count.Models;
@model List<MealFood>
@{
    ViewData["Title"] = "AllFoodsOfMeal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Foods Of Meal</h1>
<p><i>To add more foods to a meal go to Food Library, find the food you want to add to a meal and press the "+" button.</i></p>
<div class="table-responsive p-0">
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Food</td>
                <td>Calories</td>
                <td>Quantity</td>
                <td></td>
            </tr>
        </thead>

        @foreach (var mealfood in Model)
        {
            <tbody>
                <tr>
                    <td>@mealfood.Food.Name</td>
                    <td>@mealfood.Calories</td>
                    <td>@mealfood.Quantity</td>

                    <td><a asp-controller="Meal" asp-action="RemoveFoodFromMeal" asp-route-id="@mealfood.Id" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a></td>
                </tr>
            </tbody>


        }
    </table>
</div>


