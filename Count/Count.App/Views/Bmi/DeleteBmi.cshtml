@model Count.Models.BmiUser
@{
    ViewData["Title"] = "DeleteBmi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Bmi</h1>
<form asp-controller="Bmi" asp-action="DeleteBmi" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    @Html.HiddenFor(bu => bu.UserId)
    @Html.HiddenFor(bu => bu.Id)
    @Html.HiddenFor(bu => bu.Date)
    @Html.HiddenFor(bu => bu.IsDeleted)
    @Html.HiddenFor(bu => bu.Bmi)
    @Html.HiddenFor(bu => bu.CalculatedBmi)

    <div class="form-group">
        <label>Height(Cm)</label>
        <br />
        <input asp-for="Height" class="form-control" readonly />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Weight(Kg):</label>
        <br />
        <input asp-for="Weight" class="form-control" readonly />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <button class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
    <br />
    <a asp-controller="Bmi" asp-action="HealthCheck"><i>Back To Health Check</i></a>
</form>

